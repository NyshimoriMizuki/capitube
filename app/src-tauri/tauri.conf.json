{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1424",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "CapiTube",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "capitube.tauri",
      "copyright": "MPL 2.0 (Nyshimori Mizuki)",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "app",
        "width": 800,
        "height": 600,
        "minHeight": 400,
        "minWidth": 650
      }
    ]
  }
}